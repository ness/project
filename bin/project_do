#!/usr/bin/env bash

do_dirs () {
	cd $PROJECT_DIR/..
	"$@"
}

do_key () {
	echo key: $1
	shift
	echo $@
	old_IFS=$IFS
	IFS=$'\0'
	SOURCE_DIRS=( $(project_configuration show --key source_dirs --format null) )
	IFS=$old_IFS

    $(project_configuration show --key source_dirs --format null) | parallel -0 --no-notice 'pushd {}; "$@"; popd {}; '
}

case "$1" in
	--key)
		shift
		key=$1
		shift
		do_key $key $@
		;;
	*)
		do_dirs $@
		;;
esac
